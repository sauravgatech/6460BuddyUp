@model GT.CS6460.BuddyUp.WebAPP.Models.Skill
<div class="skillRow">
    @using (Html.BeginCollectionItem("skills"))
    {
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        @Html.LabelFor(model => model.skill, htmlAttributes: new { @class = "input-group-addon" })
                        @Html.EditorFor(model => model.skill, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.skill, "", new { @class = "text-danger" })
                    </div>
                </td>
                <td>
                    <a href="#" class="deleteSkill">delete</a>
                </td>
            </tr>
        </table>
    }
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryui")
    <script>
        $("a.deleteSkill").live("click", function () {
        $(this).parents("div.skillRow:first").remove();
        return false;
    });
    </script>
}